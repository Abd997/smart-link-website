{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@lib/database/*": ["libs/database/*"],
      "@lib/common/*": ["libs/common/*"],
      "@lib/*": ["libs/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["apps", "libs"],
  "exclude": ["node_modules"]
}
